{
    "name": "stokapp",
    "version": "1.0.0",
    "description": "Stock management application",
    "scripts": {
        "dev:css": "npx tailwindcss -i ./wwwroot/css/site.css -o ./wwwroot/css/tailwind.css --watch",
        "build:css": "npx tailwindcss -i ./wwwroot/css/site.css -o ./wwwroot/css/tailwind.css --minify",
        "dev:ts": "tsc --watch && rollup -c --watch",
        "build:ts": "tsc && rollup -c",
        "dev": "concurrently \"npm run dev:css\" \"npm run dev:ts\"",
        "build": "npm run build:css && npm run build:ts",
        "postbuild:ts": "echo 'TypeScript compiled and bundled successfully as a single file'"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.3.1",
        "@types/jquery": "^3.5.29",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "postcss": "^8.4.32",
        "rollup": "^4.37.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3"
    }
}