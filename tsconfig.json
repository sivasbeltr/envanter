{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./wwwroot/js/dist",
        "rootDir": "./Scripts",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES2020"
        ],
        "forceConsistentCasingInFileNames": true,
        // Keep paths for development convenience
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "Scripts/core/*"
            ],
            "@components/*": [
                "Scripts/components/*"
            ],
            "@utils/*": [
                "Scripts/utils/*"
            ]
        }
    },
    "include": [
        "Scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}