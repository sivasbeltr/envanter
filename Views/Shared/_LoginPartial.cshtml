@using Microsoft.AspNetCore.Authentication

@if (User.Identity.IsAuthenticated)
{
    <div class="flex items-center">
        <div class="hidden md:flex items-center mr-2 text-sm">
            <span class="mr-1 text-gray-600 dark:text-gray-300">Hoş geldiniz,</span>
            <span class="font-semibold text-gray-800 dark:text-gray-100">@User.FindFirst("name")?.Value</span>
        </div>
        <div class="relative">
            <button id="user-menu-btn" class="flex items-center text-sm focus:outline-none">
                <img class="h-8 w-8 rounded-full object-cover"
                    src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(User.FindFirst("name")?.Value ?? "User")&background=random"
                    alt="@User.FindFirst("name")?.Value">
                <span class="ml-2 hidden md:block text-gray-800 dark:text-gray-100">
                    @User.FindFirst("preferred_username")?.Value
                </span>
                <i class="ml-1 fas fa-chevron-down text-gray-400"></i>
            </button>

            <!-- User dropdown menu -->
            <div id="user-menu"
                class="hidden absolute right-0 mt-2 w-48 origin-top-right rounded-md bg-white dark:bg-gray-800 py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                <a href="/Account/Profile"
                    class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Profil</a>
                <a href="#"
                    class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Ayarlar</a>
                <hr class="my-1 border-gray-200 dark:border-gray-700">
                <a href="/Account/Logout"
                    class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">Çıkış
                    Yap</a>
            </div>
        </div>
    </div>
}
else
{
    <div>
        <a href="/Account/Login"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            <i class="fas fa-sign-in-alt mr-2"></i> Giriş Yap
        </a>
    </div>
}
