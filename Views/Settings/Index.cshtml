@{
    ViewData["Title"] = "Ayarlar";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Sistem Ayarları</h1>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Sistem ayarlarını ve yapılandırmalarını yönetin.</p>
    </div>

    <!-- Admin Only Settings -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-blue-500 rounded-md p-3">
                        <i class="fas fa-users-cog text-white text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Kullanıcılar</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Kullanıcı yönetimi</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
                <a asp-controller="Settings" asp-action="Users"
                    class="text-blue-600 dark:text-blue-400 hover:underline">
                    Yönet <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                        <i class="fas fa-building text-white text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Birimler</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Organizasyon birimleri</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
                <a asp-controller="Settings" asp-action="Departments"
                    class="text-blue-600 dark:text-blue-400 hover:underline">
                    Yönet <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                        <i class="fas fa-user-shield text-white text-xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Roller</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Sistem rolleri ve yetkiler</p>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
                <a href="#" class="text-blue-600 dark:text-blue-400 hover:underline">
                    Yönet <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- General Settings -->
    <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Genel Ayarlar</h3>
            <div class="mt-5 grid grid-cols-1 gap-5">
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900 dark:text-white">Sistem Bildirimleri</h4>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Sistem bildirimleri etkinleştir/devre
                                dışı bırak</p>
                        </div>
                        <div class="ml-4">
                            <div class="relative inline-block w-10 mr-2 align-middle select-none">
                                <input type="checkbox" name="toggle" id="notification-toggle" class="sr-only" checked>
                                <label for="notification-toggle"
                                    class="block overflow-hidden h-6 rounded-full bg-gray-300 dark:bg-gray-600 cursor-pointer"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="text-sm font-medium text-gray-900 dark:text-white">Otomatik Yedekleme</h4>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Günlük otomatik veri yedekleme</p>
                        </div>
                        <div class="ml-4">
                            <div class="relative inline-block w-10 mr-2 align-middle select-none">
                                <input type="checkbox" name="toggle" id="backup-toggle" class="sr-only" checked>
                                <label for="backup-toggle"
                                    class="block overflow-hidden h-6 rounded-full bg-gray-300 dark:bg-gray-600 cursor-pointer"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                   
                   
                               
                                   
                                   